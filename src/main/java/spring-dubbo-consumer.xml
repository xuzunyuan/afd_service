<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">
 	<dubbo:application name="afd_service"/>
 	
 	<!-- 生成远程服务代理，可以和本地bean一样使用demoService -->   
 	<dubbo:reference check="false" retries="0" id="dubbo_orderService" interface="com.afd.service.order.IOrderService" />
 	
 	<dubbo:reference check="false" retries="0" id="dubbo_categoryService" interface="com.afd.service.product.ICategoryService" />
 	<dubbo:reference check="false" retries="0" id="dubbo_attributeService" interface="com.afd.service.product.IAttributeService" />
 	<dubbo:reference check="false" retries="0" id="dubbo_brandService" interface="com.afd.service.product.IBrandService" />
 	<dubbo:reference check="false" retries="0" id="dubbo_specService" interface="com.afd.service.product.ISpecService" />
    <dubbo:reference check="false" retries="0" id="dubbo_paymentServices" interface="com.afd.service.payment.IPaymentServices" />
   	<beans profile="develop">
   		<!-- 广播中心地址 -->
	    <dubbo:registry protocol="zookeeper" port="2181" address="192.168.1.19" />
   	</beans>
</beans>
